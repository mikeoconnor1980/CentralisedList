@model IEnumerable<CentralisedListObjects.Client>

@{
    ViewBag.Title = "Client List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            Publishable
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.is_dirty)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) 
            
            @if (item.is_dirty == true)
            {
                @Html.ActionLink("| Send to Service Bus", "SubmitToServiceBus", new { id = item.id })
            }
            
        </td>
    </tr>
}

</table>

<br/>


<p>Service Bus Queue: @ViewBag.MessageCount</p>